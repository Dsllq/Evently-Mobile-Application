<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- شريط علوي ملون -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/squareColor" />

        <!-- صورة الحدث -->
        <ImageView
            android:id="@+id/imgEvent"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_image_background"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder" />

        <!-- عنوان الحدث -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/artico_bold"
            android:text="Merry Christmas"
            android:textColor="@color/primaryDarkColor"
            android:textSize="22sp" />

        <!-- تفاصيل الحدث -->
        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/artico_regular"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum eget felis eu ante eleifend viverra."
            android:textColor="@color/textColorSecondary"
            android:textSize="16sp" />

        <!-- تاريخ الحدث -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/artico_regular"
            android:text="31 May 2023"
            android:textColor="@color/squareColor"
            android:textSize="14sp" />

        <!-- عدد الحاضرين -->
        <TextView
            android:id="@+id/tvTotalNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/artico_bold"
            android:text="25 people attend"
            android:textColor="@color/primaryDarkColor"
            android:textSize="18sp" />

        <!-- زر الانضمام -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnJoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/squareColor"
            android:fontFamily="@font/artico_bold"
            android:text="Join Now"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:elevation="4dp"
            android:paddingVertical="12dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/squareColor" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
